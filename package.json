{
  "name": "updated-pdf-merger",
  "version": "1.0.0",
  "description": "Electron merger for PDFs, PowerPoints, and images",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win portable"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "image-size": "^1.2.1",
    "jszip": "^3.10.1",
    "pdf-lib": "^1.17.1",
    "pptx-automizer": "^0.8.1",
    "pptxgenjs": "^4.0.1"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron": "^40.2.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.labar.filemerger",
    "productName": "Updated File Merger",
    "asar": true,
    "files": [
      "**/*",
      "!_portable_build/**",
      "!_release_portable/**",
      "!dist/**",
      "!.git/**",
      "!*.zip",
      "!*.7z"
    ],
    "extraResources": [
      {
        "from": "tools",
        "to": "tools"
      }
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/build-icon.ico",
      "artifactName": "Updated-File-Merger-Portable-${version}.${ext}"
    }
  }
}
